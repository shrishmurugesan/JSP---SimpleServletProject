<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>SimpleServletProject</display-name>
   
  <welcome-file-list>
    <welcome-file>welcome.html</welcome-file>

  </welcome-file-list>
  
  
  
  <servlet>
  	<servlet-name>XmlServlet</servlet-name>
  	<servlet-class>com.shrish.servlets.XmlServlet</servlet-class>
  	<init-param>
  		<param-name>userName</param-name>
  		<param-value>Shrish XML</param-value>
  	</init-param>
  	<init-param>
  		<param-name>marriedTo</param-name>
  		<param-value>Sharmila XML</param-value>
  	</init-param>
  </servlet>
  
  <servlet>
  	<servlet-name>InitJSP</servlet-name>
  	<jsp-file>/initpage.jsp</jsp-file> 	
  	<init-param>
  		<param-name>userName</param-name>
  		<param-value>ShrishMurugesan</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>InitJSP</servlet-name>
  	<url-pattern>/initpage.jsp</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>XmlServlet</servlet-name>
  	<url-pattern>/XmlServletPath</url-pattern>
  </servlet-mapping>
  
  
  
  
</web-app>